{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "allowImportingTsExtensions": true,

    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "dts"
  },
  "include": ["src/index.ts"],
  "exclude": ["node_modules"]
}
